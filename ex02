def verificar_letra_a(string):
    quantidade_a = string.lower().count('a')

    if quantidade_a > 0:
        return f"A letra 'a' aparece {quantidade_a} vezes na string."
    else:
        return "A letra 'a' n√£o foi encontrada na string."

texto = input("Digite algo: ")
resultado = verificar_letra_a(texto)
print(resultado)
